<div class="container p-4">
        <div class="row">
            <div class="col-md-4 offset-md-4">
            {{#with image}}
                <div class="card animated fadeInDown">
                    <img src="{{ path }}" class="card-img-top" alt="{{ filename }}">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{ title }}
                        </h5>
                        <p class="card-text">
                            {{ description }}
                        </p>
                        <p>
                            {{ created_at }}
                        </p>
                        <a href="/galery/image/{{ _id }}/delete" class="btn btn-danger btn-block">
                            Borrar imagen
                        </a>
                    </div>
                </div>
            </div>
        {{/with}}
        </div>
    </div>